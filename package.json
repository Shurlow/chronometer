{
  "author": "shurlow",
  "name": "chronometer",
  "description": "color | time",
  "version": "0.1.0",
  "private": true,
  "main": "main/index.js",
  "homepage": "./",
  "build": {
    "appId": "com.electron.chronometer",
    "files": [
      "build/**/*",
      "main/**/*",
      "node_modules/**/*"
    ],
    "extraResources": "./set_wallpaper",
    "extraMetadata": {
      "main": "main/index.js"
    },
    "directories": {
      "buildResources": "public"
    }
  },
  "devDependencies": {
    "concurrently": "^3.5.1",
    "electron": "^1.8.4",
    "electron-builder": "^20.10.0",
    "react-scripts": "1.1.4",
    "semantic-ui": "^2.3.1",
    "wait-on": "^2.1.0"
  },
  "dependencies": {
    "chroma-js": "^1.3.6",
    "electron-is-dev": "^0.3.0",
    "electron-store": "^1.3.0",
    "fs-extra": "^5.0.0",
    "gm": "^1.23.1",
    "plist": "^3.0.1",
    "react": "^16.3.2",
    "react-color": "^2.14.1",
    "react-dom": "^16.3.2",
    "semantic-ui-css": "^2.3.1",
    "semantic-ui-react": "^0.79.1",
    "uuid": "^3.2.1",
    "wallpaper": "^2.6.0"
  },
  "scripts": {
    "start": "concurrently 'npm run react' 'wait-on http://localhost:3000 && npm run electron'",
    "react": "BROWSER=none react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "wait-on": "wait-on",
    "electron": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  }
}
